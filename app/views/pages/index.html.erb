<div id="search-view" class="main-view">

  <div style="width: 100%;">

    <h1 id="index-main-text">Get help near you</h1>
    
    <%= form_tag("/search", :method => "get", id: "index-form") do %>
      
      <div class="search-menu">
        <%= text_field_tag :search, params[:search], placeholder: "Please enter your county", id: "searchbar", :autofocus => true %>
        <button type="submit" class="searchbutton"><i class="material-icons">search</i></button>
      </div>

      <div class="filters">
      <p>Please select what you are looking for</p>
        <%= render '/pages/inputs' =%>
      </div>

    <% end %>

  </div>

  <div class="contactUsBanner footer-banner">
      <p>You are not alone. If you or someone you know needs help, call <span class="desktop-number">1-800-656-4673</span><a class="mobile-number" href="tel:+18006564673">1-800-656-4673</a> for immediate support or contact us today.</p>
  </div>
</div>