<div id="search-view" class="main-view">

  <div style="width: 100%;">

    <h1 id="index-main-text"><%= I18n.t 'index.header'%></h1>
    
    <%= form_tag("/search", :method => "get", id: "index-form") do %>
      
      <div class="search-menu">
        <%= text_field_tag :search, params[:search], placeholder: "#{I18n.t 'index.placeholder'}", id: "searchbar", :autofocus => true %>
        <button type="submit" class="searchbutton"><i class="material-icons">search</i></button>
      </div>

      <div class="filters">
      <p><%= I18n.t 'index.select_help'%></p>
        <%= render '/pages/inputs' =%>
      </div>

    <% end %>

  </div>

  <div class="contactUsBanner footer-banner">
      <p><%= I18n.t 'index.contact_banner_a'%> <span class="desktop-number">1-800-656-4673</span><a class="mobile-number" href="tel:+18006564673">1-800-656-4673</a> <%= I18n.t 'index.contact_banner_b'%></p>
  </div>
</div>