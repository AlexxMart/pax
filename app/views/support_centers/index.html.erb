<section class="section-container">

  <h1>Listing all Support Centers</h1>

  <% if admin_signed_in? %>
    <p><%= link_to 'Add New Support Center', new_support_center_path, :class => 'action-button' %></p>
  <% end %>

  <table>
    <tr>
      <th>name</th>
      <th>Created At</th>
      <th>Updated At</th>
    </tr>
    <% @support_centers.each do |center| %>
      <tr>
        <td><%= center.name %></td>
        <td><%= center.created_at %></td>
        <td><%= center.updated_at %></td>
        <td><%= link_to 'Show', support_center_path(center), :class => 'action-button' %></td>
        <% if admin_signed_in? %>
          <td><%= link_to 'Edit', edit_support_center_path(center), :class => 'action-button' %></td>
          <td><%= link_to 'Delete', support_center_path(center), method: :delete, data: {confirm: "Are you sure you want to delete this support center?"}, :class => 'action-button' %></td>
        <% end %>
      </tr>
    <% end %>
  </table>
</div>